LOWER BOUND AND UPPER BOUND:

class Main{
  public static int lowerBound(int[] arr, int key){
    int l = 0, r = arr.length;
    while(l<r){
      int mid = l + (r-l)/2;
      if(arr[mid]<k){
        l = mid+1;
      }else{
        r = mid;
      }
    }
    return l;
    //UPPER BOUND:
    while(l<=r){
      int mid = l + (r-l)/2;
      if(arr[mid]<k){
        l = mid+1;
      }else{
        r = mid;
      }
    }
    return l-1;
  }
}
